<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="com.zm.framegather.fragment.ListFragment">

    <include layout="@layout/title_bar_base"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/BtnRemoveItem"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"

                android:background="@drawable/btn_yellow_selector"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="侧滑删除"/>

            <TextView
                android:id="@+id/BtnNestedScrolling"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_yellow_selector"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="NestedScrolling嵌套滑动机制"/>

            <TextView
                android:id="@+id/BtnNestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_yellow_selector"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="NestedScrollView嵌套滑动机制"/>

            <TextView
                android:id="@+id/BtnCoordinator"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_yellow_selector"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Coordinator嵌套滑动机制"/>

            <TextView
                android:id="@+id/BtnDynamicBox"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_yellow_selector"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="DynamicBox数据加载动画"/>

            <TextView
                android:id="@+id/BtnWidget"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_yellow_selector"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Fresco动画特效"/>

            <TextView
                android:id="@+id/BtnAdvertisement"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_yellow_selector"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="滚动显示广告"/>

            <TextView
                android:id="@+id/BtnAnimation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_yellow_selector"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Android三种常用动画"/>

            <TextView
                android:id="@+id/BtnCurve"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_yellow_selector"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="贝塞尔曲线"/>

            <TextView
                android:id="@+id/BtnProgress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_yellow_selector"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="特效进度条"/>

            <TextView
                android:id="@+id/BtnSuperTextView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_yellow_selector"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="强大的文字展示控件"/>

            <TextView
                android:id="@+id/BtnTime"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_yellow_selector"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="时间选择控件"/>

        </LinearLayout>

    </ScrollView>



</LinearLayout>
