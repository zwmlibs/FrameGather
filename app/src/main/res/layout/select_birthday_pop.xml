<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/normal_bg">

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentTop="true"
            android:background="#CCCCCC" />

        <TextView
            android:id="@+id/date_pop_textview_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/date_pop_textview_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="确定"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <com.zm.framegather.wheel.WheelView
            android:id="@+id/date_pop_wheelview_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000" >
        </com.zm.framegather.wheel.WheelView>

        <com.zm.framegather.wheel.WheelView
            android:id="@+id/date_pop_wheelview_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000" >
        </com.zm.framegather.wheel.WheelView>

        <com.zm.framegather.wheel.WheelView
            android:id="@+id/date_pop_wheelview_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000" >
        </com.zm.framegather.wheel.WheelView>
    </LinearLayout>

</LinearLayout>